        <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="center"> Initial Value</Label>
        <Button Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Width="60"> Save</Button>
        <TextBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Width="100"></TextBox>
        <TextBox Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Width="100"></TextBox>
        <Button Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Width="60">Cancel</Button>
    </Grid>
